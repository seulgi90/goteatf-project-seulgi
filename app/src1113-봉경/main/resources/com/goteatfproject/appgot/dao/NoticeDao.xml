  <select id="findByNo" resultMap="noticeMap">
    select
      csno,
      title,
      cont,
      createdate,
      filename
    from
      cs_notice
    where
      csno=#{value}
  </select>
  
  <select id="findAll" resultMap="noticeMap">
    select 
      csno,
      title,
      createdate
    from 
      cs_notice
    order by 
      csno desc
  </select>

