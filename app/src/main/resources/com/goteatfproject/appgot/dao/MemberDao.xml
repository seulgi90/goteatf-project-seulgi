  <select id="findByNo" resultMap="memberMap">
   select
     mno,
     name,
     id
   from
     member
   where
     mno=#{value}
 </select> 
  
  <select id="findAll" resultMap="memberMap">
    select 
      mno,
      name,
      id      <!-- TODO email -> id 수정  -->
    from 
      member
    order by 
      mno
  </select>

  <select id="findByEmailPassword" resultMap="memberMap">
    select
      mno,
      name,
      id,
      createddate
    from
      member
    where
      id=#{id} and pwd=sha2(#{password},256)
  </select>
  
