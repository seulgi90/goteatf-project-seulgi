  <select id="findAll" resultMap="memberMap">
    select 
      mno,
      name,
      id      <!-- TODO email -> id 수정  -->
    from 
      member
    order by 
      name
  </select>

  <select id="findByEmailPassword" resultMap="memberMap">
    select
      mno,
      name,
      id,
      createdate
    from
      member
    where
      id=#{id} and pwd=sha2(#{password},256)
  </select>
  
 <update id="update" parameterType="Member">
    update member set 
      id=#{id}, 
      name=#{name}, 
      pwd=sha2(#{password},256) 
    where 
      mno=#{no}
  </update>


 <delete id="delete">
   delete from member
   where mno=#{value}
 </delete>

</mapper>